@model IEnumerable<StoreAPI.Models.DTO.ProduitDto>
@{
    ViewData["Title"] = "Gestion des Produits";
}

<div class="container mt-5">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0"><i class="fas fa-boxes me-2"></i> @ViewData["Title"]</h4>
            <a asp-action="Ajouter" class="btn btn-light text-primary fw-bold">
                <i class="fas fa-plus-circle"></i> Ajouter un produit
            </a>
        </div>

        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover align-middle text-center">
                    <thead class="table-light">
                        <tr>
                            <th>Id Produit</th>
                            <th>Image</th>
                            <th>Nom</th>
                            <th>Description</th>
                            <th>Catégorie</th>
                            <th>Type animal</th>
                            <th>Prix</th>
                            <th>Quantité</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.IdProduit</td>
                                <td>
                                    <img src="https://localhost:7254/api/Produits/image/@item.IdProduit"
                                         alt="@item.Nom"
                                         class="img-thumbnail"
                                         style="max-width: 80px; max-height: 80px; object-fit: cover;"
                                         onerror="this.onerror=null; this.src='/images/produits/default.jpg';" />
                                </td>
                                <td>@item.Nom</td>
                                <td class="text-muted">@item.Description</td>
                                <td><span class="badge bg-secondary">@item.Categorie</span></td>
                                <td><span class="badge bg-secondary">@item.AnimalType</span></td>
                                <td class="fw-bold text-primary">@item.Prix.ToString("C")</td>
                                <td class="fw-bold" style="color: @(item.Quantite > 0 ? "#198754" : "#dc3545");">
                                    @item.Quantite
                                </td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary me-1">
                                        <i class="fas fa-edit"></i> Modifier
                                    </a>
                                    <form asp-action="Delete" method="post" style="display:inline;">
                                        <input type="hidden" name="Id" value="@item.Id" />
                                        <button type="submit" class="btn btn-sm btn-outline-danger"
                                                onclick="return confirm('Confirmer la suppression de ce produit ?');">
                                            <i class="fas fa-trash-alt"></i> Supprimer
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
